<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:MVVMAwesomium="clr-namespace:MVVMAwesomium;assembly=MVVMAwesomium" 
        xmlns:awe="http://schemas.awesomium.com/winfx" x:Class="MVVMAwesomium.UI.Calendar.MainWindow"
        Title="HTML vs WPF: DateTime" Height="350" Width="525" Loaded="Window_Loaded">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <MVVMAwesomium:HTMLViewControl  x:Name="WebControl" RelativePath="HTLM\index.html"  HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
        <DatePicker SelectedDate="{Binding Path=Date}" Grid.Column="1" HorizontalAlignment="Center" VerticalAlignment="Center"/>

    </Grid>
</Window>
